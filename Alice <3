function ativarContagem() {
  document.getElementById('tempo').innerHTML = "queijo??";
  setTimeout(function (){ 
    document.getElementById('tempo').innerHTML = "Não! Eu até gosto, mas...";
  }, 2000)
 }


 function ativarContagem2() {
  document.getElementById('tempo').innerHTML = "Com toda a certeza do mundo";
  setTimeout(function (){ 
    document.getElementById('tempo').innerHTML = "é você!!!!!!";
  }, 2000)
 }

 function ativarContagem3() {
  document.getElementById('tempo').innerHTML = "Bom, se eu tivesse que pensar..";
  setTimeout(function (){ 
    document.getElementById('tempo').innerHTML = "Olhos? boca? seu rosto? sua bunda perfeita?";
  }, 2000)
 }

 function ativarContagem4() {
  document.getElementById('tempo').innerHTML = "Você tem tantas qualidades.. mas eu diria";
  setTimeout(function (){ 
    document.getElementById('tempo').innerHTML = "tudo!!!! você é perfeita amor, não existe defeitos em você!!!";
  }, 2000)
 }

 function ativarContagem5() {
  document.getElementById('tempo').innerHTML = "Viajar pelo mundo todo?";
